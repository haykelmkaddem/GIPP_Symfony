{% extends 'base.html.twig' %}

{% block title %}Salon index{% endblock %}

{% block body %}
    <h1>Salon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Temps_debut</th>
                <th>Temps_fin</th>
                <th>Lieu</th>
                <th>Max_invitation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salon in salons %}
            <tr>
                <td>{{ salon.id }}</td>
                <td>{{ salon.titre }}</td>
                <td>{{ salon.description }}</td>
                <td>{{ salon.date ? salon.date|date('Y-m-d') : '' }}</td>
                <td>{{ salon.tempsDebut ? salon.tempsDebut|date('H:i:s') : '' }}</td>
                <td>{{ salon.tempsFin ? salon.tempsFin|date('H:i:s') : '' }}</td>
                <td>{{ salon.lieu }}</td>
                <td>{{ salon.maxInvitation }}</td>
                <td>
                    <a href="{{ path('app_salon_show', {'id': salon.id}) }}">show</a>
                    <a href="{{ path('app_salon_edit', {'id': salon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salon_new') }}">Create new</a>
{% endblock %}
